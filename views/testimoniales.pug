extends ./layout/index

block contenido
   

    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row 

            h2.d-block.w-100.text-center Agregar un Tetimonial

            .row.justify-content-center.col
                .col-md-8 
                    form(action="/testimoniales" method="POST")
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", name="nombre", placeholder="Tu Nombre", class="form-control")
                            label(for="email") Email
                            input#email(type="email", name="email", placeholder="Tu Email", class="form-control")
                            label(for="mensaje") Mensaje
                            textarea#mensaje( name="mensaje", placeholder="Tu Mensaje", class="form-control", rows=3)

                            input.btn.btn-success.btn-block.mt-2(type="submit")